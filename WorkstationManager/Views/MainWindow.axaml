<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WorkstationManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WorkstationManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="WorkstationManager">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>


	<StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="250,0">

		<TextBlock Text="Workstation Manager" FontSize="18" TextAlignment="Center"
				   Margin="0,10,0,10"/>

		<TextBox Watermark="Username" Margin="0,5,0,0" Width="300"
				 Text="{Binding Username, Mode=TwoWay}" />

		<TextBox Watermark="Password" PasswordChar="*" Margin="0,5,0,0" Width="300"
				 Text="{Binding Password, Mode=TwoWay}" />

		<Button Content="Sign In" Margin="0,10,0,0" HorizontalAlignment="Center" Width="100"
				Command="{Binding SignInCommand}" />

	
	</StackPanel>

</Window>
